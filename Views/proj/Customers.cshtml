<h3>Add a new Customer</h3>
<form action="/newcustomer" method=post>
	Customer Name: 
	<input type=text name=name>
	<input type=submit value="Add">
</form>

<input type=input id=filter placeholder="filter...">
<table>
	<th>Customer Name</th>
	<th>Date</th>
	<th>Actions</th>

	@{
		foreach(var i in @ViewBag.Users)
		{
			<tr>
				<td>@i.Name</td>
				<td>@i.CreatedAt</td>
				<td><form action="/removeuser/@i.UserId " method=post>
					<input type=submit value="Remove">
				</form></td>
			</tr>
		}
	}
</table>
